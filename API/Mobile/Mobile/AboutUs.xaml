<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Mobile.AboutUs"
             BackgroundColor="Black">
    
    
    <ContentPage.Content>
        <ScrollView>
            <StackLayout>
                <Label Text="Our Team." Margin="40"  TextColor="White" FontSize="55" FontAttributes="Bold"/>
                <Label Text="Team of students from Warsaw." Margin="40,0"  TextColor="White" FontSize="18"/>
                <Label Text="You are now listening to Trackslance." Margin="40,0"  TextColor="White" FontSize="18"/>
                <Label Text="Welcome to our music family." Margin="40,0" TextColor="White" FontSize="18"/>
                <Frame BackgroundColor="White" BorderColor="White" Margin="30,40" CornerRadius="360" >
                    <Image Source="naszgif.gif" IsAnimationPlaying="True" Margin="-16"/>
                </Frame>
                <Frame BackgroundColor="White" BorderColor="White" Margin="30,-130,180,40" CornerRadius="360" >
                    <Frame BackgroundColor="Black" BorderColor="White" Margin="-18,-18,-18,-18" CornerRadius="360">
                        <Label Text="TRACKSLANCE." Margin="8,55,8,55" TextColor="White" FontSize="17"/>
                    </Frame>
                </Frame>
            </StackLayout>
        </ScrollView>
    </ContentPage.Content>
</ContentPage>